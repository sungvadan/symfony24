{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/user/css/login.css') }}" />
{% endblock %}
{% block body %}
    <section class="login">
        <article>
            <h1>Register</h1>
            {{  form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first,{'label' : 'Password'}) }}
                {{ form_row(form.plainPassword.second,{'label' : 'Repeat Password'}) }}
                {{ form_rest(form) }}
                <input type="submit" class="btn btn-md btn-primary col-md-3 pull-right" value="Submit">
            {{ form_end(form) }}
        </article>
    </section>
{% endblock %}